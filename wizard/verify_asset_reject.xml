<?xml version="1.0"?>
<odoo>
        <record id="inventory_track_reject_verify_asset_wizard" model="ir.ui.view">
            <field name="name">inventory_track.reject_verify_asset.form</field>
            <field name="model">inventory_track.reject_verify_asset</field>
            <field name="arch" type="xml">
                <form string="Reject">
                    <group>
                        <field name="verify_reject_comment"/>   
                    </group>
                    <group>
                        <field name="verify_reject_date" readonly="1"/>
                    </group>
                      <group>
                        <field name="verify_reject_by" readonly="1"/>
                    </group>
                    <footer>
                        <button name="verify_reject_asset" string="Reject Verification Asset" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_reject_verify_asset_manager" model="ir.actions.act_window">
            <field name="name">Reject Verification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.reject_verify_asset</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_track_reject_verify_asset_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

<?xml version="1.0"?>
<odoo>
        <record id="inventory_track_initiate_repair_wizard" model="ir.ui.view">
            <field name="name">inventory_track.asset_initiate_repair.form</field>
            <field name="model">inventory_track.asset_initiate_repair</field>
            <field name="arch" type="xml">
                <form string="Repair Mode">

                    <group>
                        <field name="tag" readonly='1' options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" style="color: #e60911; font-weight: bold;" />   
                        <field name="serial_set" readonly='1' />  
       
                    </group>
                    <group>
                        <field name="currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>   
                        <field name="repair_amount"/>   
                    </group>
        
                    <group>
                        <field name="initiate_repair_comment"/>   
                    </group>
                    <group>
                        <field name="file_attach_initiate_repair"/>   
                    </group>
                    <group>
                        <field name="initiate_repair_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="initiate_repair_by" readonly="1"/>
                    </group>
                    <footer>
                        <button name="initiate_repair_req" string="Initiate Repair" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_i_repair_manager" model="ir.actions.act_window">
            <field name="name">Repair Mode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.asset_initiate_repair</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_track_initiate_repair_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

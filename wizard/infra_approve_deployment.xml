<?xml version="1.0"?>
<odoo>
        <record id="inventory_infra_approve_deployment_wizard" model="ir.ui.view">
            <field name="name">inventory_track.infra_approve_deployment.form</field>
            <field name="model">inventory_track.infra_approve_deployment</field>
            <field name="arch" type="xml">
                <form string="Approve">
                    <group>
                        <separator string="Asset Approval Checklist" colspan="2"/>
                        <field name="infra_comp_name"/>   
                        <field name="Operating_system_Build"/>   
                        <field name = "Microsoft_office" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "browser" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "Antivirus" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "os_updates" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "user_file" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "guest_account" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "ou" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name="user_department"/>   
                        <field name="other_information"/>   
                    </group>
                    <group>
                        <field name="infra_approve_comment"/>   
                    </group>
                     <group>
                        <field name="infra_approve_by" invisible="1"/>   
                    </group>
                    <group>
                        <field name="infra_approve_date" invisible="1"/>
                    </group>
                    <footer>
                        <button name="infra_approved_asset" string="Approve Deployment" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_infra_approve" model="ir.actions.act_window">
            <field name="name">Deployment Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.infra_approve_deployment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_infra_approve_deployment_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

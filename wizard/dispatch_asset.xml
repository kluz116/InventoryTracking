<?xml version="1.0"?>
<odoo>
        <record id="inventory_track_dispatch_wizard" model="ir.ui.view">
            <field name="name">inventory_track.dispatch_asset.form</field>
            <field name="model">inventory_track.dispatch_asset</field>
            <field name="arch" type="xml">
                <form string="Deployoyment">

                    <separator string="Asset Approval Checklist" colspan="2"/>
                    <group colspan="8" col="4">
                       
                        <field name="infra_comp_name"/>   
                        <field name="Operating_system_Build"/>   
                        <field name = "Microsoft_office" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "browser" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "Antivirus" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "os_updates" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "user_file" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "guest_account" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name = "ou" widget="radio"  options="{'horizontal': true}" style="color: #e60911; font-weight: bold;"/>
                        <field name="user_department"/>   
                        <field name="other_information"/>   
                    </group>
                    <separator string="Asset Deployment Details" colspan="2"/>
                    <group>
                        <field name="courier" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />   
                    </group>
                    <group>
                        <field name="location_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />   
                    </group>
                    <group>
                        <field name="dispatched_to" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>   
                    </group>
                    <group>
                        <field name="dispach_comment"/>   
                    </group>
                    <group>
                        <field name="dispach_date" readonly="1"/>   
                    </group>
                    <group>
                        <field name="dispatched_by" readonly="1"/>
                    </group>
                    <footer>
                        <button name="dispatch__asset" string="Deploy Asset" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_dispatch_asset_manager" model="ir.actions.act_window">
            <field name="name">Deploy Asset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.dispatch_asset</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_track_dispatch_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

<?xml version="1.0"?>
<odoo>
        <record id="inventory_track_asset_diagnosis_wizard" model="ir.ui.view">
            <field name="name">inventory_track.asset_diagnosis.form</field>
            <field name="model">inventory_track.asset_diagnosis</field>
            <field name="arch" type="xml">
                <form string="Asset Diagnosis">

                    <group>
                        <field name="tag" readonly='1' options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" style="color: #e60911; font-weight: bold;" />   
                        <field name="serial_set" readonly='1' />  
              
                        
                    </group>
                     <group>
                        <field name="file_attach_diagnosis"/>  
                     </group>
                    <group>
                        <field name="diagnosis_comment"/>   
                    </group>
                    <group>
                        <field name="diagnosis_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="diagnosis_by" readonly="1"/>
                    </group>
                    <footer>
                        <button name="diagnosis_asset" string="Asset Diagnosis" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_asset_diagnosis" model="ir.actions.act_window">
            <field name="name">Asset diagnosis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.asset_diagnosis</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_track_asset_diagnosis_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

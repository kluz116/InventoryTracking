<?xml version="1.0"?>
<odoo>
        <record id="inventory_track_repaire__wizard" model="ir.ui.view">
            <field name="name">inventory_track.repair.form</field>
            <field name="model">inventory_track.repair</field>
            <field name="arch" type="xml">
                <form string="Repair  Asset">
                    <group>
                        <field name="tag" readonly='1' options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />   
                        <field name="serial_set" widget="many2many_tags" invisible='1' />  
                    </group>
                    <group>
                    
                        <field name = "serial"   widget="many2many_tags" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />
                    </group> 
                    <group>
                        <field name="repaire_comment"/>   
                    </group>
                    <group>
                        <field name="repaire_date" readonly="1"/>
                    </group>
                      <group>
                        <field name="repaired_by" readonly="1"/>
                    </group>
                    <footer>
                        <button name="repair_asset" string="Repair Asset" type="object" class="btn btn-outline-primary"/>
                        <button string="Cancel" class="btn-outline-dark" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_verify_asset_repaire_assets" model="ir.actions.act_window">
            <field name="name">Repair Asset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory_track.repair</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="inventory_track_repaire__wizard"/>
            <field name="target">new</field>
        </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
     
        <record id="view_inventory_tree" model="ir.ui.view">
            <field name="name">inventory_track_inventory.tree</field>
            <field name="model">inventory_track.inventory</field>
             <field name="arch" type="xml">
                <tree string="Inventory"  default_order='created_on desc'>
                    <field name="asset_type"/>
                    <field name="asset_status"/>
                    <field name="vendor_id" />
                    <field name="make" />
                    <field name="model" />
                    <field name="serial" widget="many2many_tags" />
                    <field name="tag" />
                    <field name="effective_date" />
                    <field name="waranty_date" />
                    <field name="year" />
                    <field name="warrant_status" />
                    
                    <field name="created_on"/> 
                    <field name="created_by"/>   
                       
                </tree>
            </field>
        </record>

        <record id="view_inventory_repaire_tree" model="ir.ui.view">
            <field name="name">asset_repair_log.tree</field>
            <field name="model">inventory_track.asset_repair_log</field>
             <field name="arch" type="xml">
                <tree string="Repaire" default_order='repaire_date desc'>
                <field name="asset_type"/> 
                 <field name="asset_id"/> 
                 <field name="serial"  /> 
                <field name="asset_status"/> 
                <field name="repaire_comment"/> 
                <field name="repaire_date"/> 
                <field name="repaired_by"/>      
                </tree>
            </field>
        </record>
             <record id="view_asset_dispose_log_tree" model="ir.ui.view">
            <field name="name">asset_dispose_log.tree</field>
            <field name="model">inventory_track.asset_dispose_log</field>
             <field name="arch" type="xml">
                <tree string="Disposal" default_order='dispose_date desc'>
                <field name="asset_type"/> 
                 <field name="asset_id"/> 
                 <field name="serial"  /> 
                <field name="asset_status"/> 
                <field name="dispose_comment"/> 
                <field name="dispose_date"/> 
                <field name="dispose__by"/>      
                </tree>
            </field>
        </record>
        <record id="view_inventory_activate_tree" model="ir.ui.view">
            <field name="name">asset_activate_log.tree</field>
            <field name="model">inventory_track.asset_activate_log</field>
             <field name="arch" type="xml">
                <tree string="Active" default_order='activated_date desc'>
                <field name="asset_id"/> 
                <field name="asset_status"/> 
                <field name="activated_comment"/> 
                <field name="activated_date"/> 
                <field name="activated_by"/>      
                </tree>
            </field>
        </record>
         
         
        <record id="inventory_form" model="ir.ui.view">
            <field name="name">inventory_track.inventory.form</field>
            <field name="model">inventory_track.inventory</field>
            <field name="arch" type="xml">
                <form string="Create Inventory Record" create="false" edit="false">
                 <xpath expr="//sheet" position="before">
                    <header> 
                        <button name="%(wizard_stock_asset_manager)d" attrs="{'invisible':[('asset_status', 'in', ['stocked','verified','verified_one','diployment','active','repair','disposal','rejected'])]}" type="action" string="Stock Asset" class="btn btn-primary"  groups="InventoryTracking.infrastructure_admin"/>
                        <button name="%(wizard_verify_asset_manager)d" attrs="{'invisible':[('asset_status', 'in', ['new','verified','verified_one','diployment','active','repair','disposal','approved','rejected'])]}" type="action" string="Verify Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager"/>
                        <button name="%(wizard_verify_asset_cyber_manager)d" attrs="{'invisible':[('asset_status', 'in', ['new','stocked','verified_one','diployment','active','repair','disposal','approved','rejected'])]}" type="action" string="Cyber Verify Asset" class="btn btn-primary"  groups="InventoryTracking.cyber_admin"/>
                        <button name="%(wizard_dispatch_asset_manager)d" attrs="{'invisible':[('asset_status', 'in', ['new','stocked','verified','diployment','active','repair','disposal','approved','rejected'])]}" type="action" string="Deploy Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager,InventoryTracking.infrastructure_admin" />
                        <button name="%(wizard_reject_asset_manager)d" attrs="{'invisible':[('asset_status' , 'in', ['new','stocked','verified','verified_one','active','repair','disposal','approved','rejected'])]} " type="action" string="Reject Deployment" class="btn btn-danger"  groups="InventoryTracking.head_department" />
                        <button name="%(wizard_approve_asset_manager)d" attrs="{'invisible':[('asset_status' , 'in', ['new','stocked','verified','verified_one','active','repair','disposal','approved'])]} " type="action" string="Approve Deployment" class="btn btn-success"  groups="InventoryTracking.head_department"/>
                        <button name="%(wizard_dispatch_asset_manager)d" attrs="{'invisible':[('asset_status' , 'in', ['new','stocked','verified','verified_one','active','repair','disposal','approved','diployment'])]} " type="action" string="Deploy Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager,InventoryTracking.infrastructure_admin" />
                        <!--<button name="%(wizard_verify_asset_activate_location)d" attrs="{'invisible':['|',('asset_status', 'in', ['new','stocked','verified','verified_one','active','repair','disposal']),('current_user', '=', False)]}" type="action" string="Activate Asset" class="btn btn-primary"  />-->
                        <button name="%(wizard_verify_asset_activate_location)d" attrs="{'invisible':['|',('current_user', '=', False), ('asset_status' , 'in', ['new','stocked','verified','verified_one','active','repair','disposal','rejected'])]} " type="action" string="Activate Asset" class="btn btn-primary"  />
                        <!--<button name="%(wizard_verify_asset_activate_location)d"    type="action" string="Activate Asset" class="btn btn-primary" attrs="{'invisible':[('current_user', '=', False)]}"   />-->
                        <button name="%(wizard_verify_asset_repaire_assets)d" attrs="{'invisible':['|',('current_user', '=', False),('asset_status', 'in', ['new','stocked','verified','verified_one','diployment','repair','disposal','approved','rejected'])]}" type="action" string="Repair Asset" class="btn btn-primary"  />
                        <button name="%(wizard_dispatch_asset_manager)d" attrs="{'invisible':['|',('current_ifra_manager', '=', False),('asset_status', 'in', ['new','stocked','verified','verified_one','diployment','repair','disposal','approved','rejected'])]}" type="action" string="Relocate" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager" />
                        <button name="%(wizard_verify_asset_dis_assets)d" attrs="{'invisible':['|',('current_ifra_manager', '=', False),('asset_status', 'in', ['new','stocked','verified','verified_one','diployment','repair','disposal','approved','rejected'])]}" type="action" string="Dispose Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager"/>
                        <button name="%(wizard_dispatch_asset_manager)d" attrs="{'invisible':[('asset_status', 'in', ['new','stocked','verified','diployment','active','verified_one','disposal','approved','rejected'])]}" type="action" string="Deploy Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager" />

                        <button name="%(wizard_verify_asset_dis_assets)d" attrs="{'invisible':[('asset_status', 'in', ['new','stocked','verified','verified_one','diployment','active','disposal','approved','rejected'])]}" type="action" string="Dispose Asset" class="btn btn-primary" groups="InventoryTracking.infrastructure_manager"/>
                        
                        <field name="asset_status" widget="statusbar" statusbar_visible="new,stocked,verified,verified_one,diployment,approved,rejected,active,repair,disposal" />
                    </header>
                </xpath>
                   <sheet>
                        <group>
                             <separator string="General Asset Details" colspan="2"/>
                             <field name="current_user"  invisible='1'  />
                              <field name="current_ifra_manager"  invisible='1'  />
                             <field name = "vendor_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />
                             <field name="asset_type"  />
                             <field name = "make"  options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />
                             <field name = "model"  options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />
                            <field name = "tag" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" />
                            <field name = "serial" widget="many2many_tags"  />
                        </group> 
                         <group>
                             <separator string="Asset Warrant Details" colspan="2"/>
                             <field name = "year"   />
                             <field name = "effective_date"   />
                             <field name = "waranty_date" style="color: #e60911; font-weight: bold;"  />
                             <field name = "warrant_status" style="color: #e60911; font-weight: bold;"  />
                             
                        </group> 
                        <group>
                            <separator string="Additional Information" colspan="2"/>
                            <field name = "file_attach"  />
                            <field name = "comment"  placeholder="description..." />
                        </group> 
                        <group>
                            <separator string="Specifications" colspan="2"/>      
                            <field name = "ram"  attrs="{'invisible':[('asset_type', 'in', ['monitor','printer'])]}" />
                            <field name = "hdd"  attrs="{'invisible':[('asset_type', 'in', ['monitor','printer'])]}" />
                            <field name = "os"  attrs="{'invisible':[('asset_type', 'in', ['monitor','printer'])]} " />
                        </group> 
                        
                         <notebook>
                            
                                <page string="Stocked">
                                    <group>
                                        <field name = "stock_comment" readonly="1" />
                                        <field name = "stock_date"  readonly="1" />
                                    </group> 
                                   
                                </page>
                                <page string="Verification">
                                    <group>
                                        <field name = "from_manager_comment" readonly="1" />
                                        <field name = "from_manager_date" readonly="1"  />
                                    </group> 
                                </page>  
                                  <page string="Cyber Verification">
                                    <group>
                                        <field name = "cyber_comment" readonly="1" />
                                        <field name = "cyber_date" readonly="1"  />
                                    </group> 
                                </page>  
                                <page string="Deployment">
                                    <group>
                                        <field name = "location_id"  readonly="1"/>
                                        <field name = "dispatched_to" readonly="1"/>
                                        <field name = "dispach_comment" readonly="1"/>
                                        <field name = "dispach_date" readonly="1"/>
                                        <field name = "dispatched_by" readonly="1" />
                                    </group> 
                                </page>   
                                  <page string="Repair">
                                    <group>
                                        <field name = "repaire_comment" readonly="1" />
                                        <field name = "repaire_date" readonly="1"  />
                                        <field name = "repaired_by" readonly="1"  />
                                    </group> 
                                </page>   
                                <page string="Disposal">
                                    <group>
                                        <field name = "disposal_comment" readonly="1" />
                                        <field name = "disposal_date" readonly="1"  />
                                        <field name = "disposed_by" readonly="1"  />
                                    </group> 
                                </page> 
                                <page string="Activation">
                                    <group>
                                        <field name = "activated_comment" readonly="1" />
                                        <field name = "activated_date" readonly="1"  />
                                        <field name = "activated_by" readonly="1"  />
                                    </group> 
                                </page> 
                                 <page string="Deployment Approval">
                                    <group>
                                        <field name = "approval_comment" readonly="1" />
                                        <field name = "approval_date" readonly="1"  />
                                        <field name = "approval_by" readonly="1"  />
                                    </group> 
                                </page> 
                                <page string="Deployment Rejection">
                                    <group>
                                        <field name = "reject_comment" readonly="1" />
                                        <field name = "reject_date" readonly="1"  />
                                        
                                    </group> 
                                </page> 
                          </notebook>  

                            <group>
                             <field name ="created_on" invisible="1"/>
                            </group> 
                            <group>
                             <field name ="created_by" invisible="1"/>
                            </group>
                            <group>
                             <field name ="infr_manager" invisible="1" />
                            </group>              
                    </sheet> 
                
                </form>
            </field>
        </record>
      
        <record model="ir.ui.view" id="inventory_search_view">
            <field name="name">inventory_track.inventory.search</field>
            <field name="model">inventory_track.inventory</field>
            <field name="arch" type="xml">
                <search>
                    <field name="vendor_id" />
                    <field name="make" />
                    <field name="model" />
                    <field name="serial" />
                    <field name="tag" />
                </search>
            </field>
        </record>
           <record model="ir.ui.view" id="asset_repair_log_search_view">
            <field name="name">inventory_track.asset_repair_log.search</field>
            <field name="model">inventory_track.asset_repair_log</field>
            <field name="arch" type="xml">
                <search>
                        <field name="asset_id"/> 
                        <field name="asset_status"/> 
                        <field name="repaire_comment"/> 
                        <field name="repaire_date"/> 
                        <field name="repaired_by"/>   
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_dispose_log_search_view">
            <field name="name">inventory_track.asset_dispose_log.search</field>
            <field name="model">inventory_track.asset_dispose_log</field>
            <field name="arch" type="xml">
                <search>
                        <field name="asset_id"/> 
                        <field name="asset_status"/> 
                        <field name="dispose_comment"/> 
                        <field name="dispose_date"/> 
                        <field name="dispose__by"/>   
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_asset_activate_log_search_view">
            <field name="name">inventory_track.asset_activate_log.search</field>
            <field name="model">inventory_track.asset_activate_log</field>
            <field name="arch" type="xml">
                <search>
                        <field name="asset_id"/> 
                        <field name="asset_status"/> 
                        <field name="activated_comment"/> 
                        <field name="activated_date"/> 
                        <field name="activated_by"/>  
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="inventory_lists_action">
            <field name="name">Inventory</field>
            <field name="res_model">inventory_track.inventory</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Inventory</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="repair_lists_action">
            <field name="name">Repairs</field>
            <field name="res_model">inventory_track.asset_repair_log</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Inventory</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="asset_dispose_log_lists_action">
            <field name="name">Asset Disposal</field>
            <field name="res_model">inventory_track.asset_dispose_log</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Disposal</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="active_lists_action">
            <field name="name">Active Assets</field>
            <field name="res_model">inventory_track.asset_activate_log</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Inventory</p>
            </field>
        </record>
        

        <!-- top level menu: no parent -->
        <menuitem id="main_inventory_menu" name="Online Inventory Tracker"/>
        <menuitem id="config_menu_inventory" name="Inventory" sequence="11"  parent="main_inventory_menu"  />
        <menuitem id="config_inventories" name="Inventory" parent="config_menu_inventory" sequence="4"  action="inventory_lists_action" />
        <menuitem id="config_Repairs" name="Asset Repairs" parent="config_menu_inventory" sequence="5"  action="repair_lists_action" />   
        <menuitem id="config_active" name="Active Assets" parent="config_menu_inventory" sequence="6"  action="active_lists_action" /> 
        <menuitem id="config_dis" name="Asset Disposl" parent="config_menu_inventory" sequence="7"  action="asset_dispose_log_lists_action" />   
</odoo>
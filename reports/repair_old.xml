<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="inventory_repair_rpt">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
          
                    <div class="page">
                       <h4 style="text-align: center;"><strong>Asset Repair Transfer Form</strong></h4>
                       <t t-foreach="docs" t-as="x">
                          <p>Asset Code : <strong t-field="x.asset_id.tag.tag"/></p>
                          <p>Asset Type : <strong t-field="x.asset_id.tag.asset_type"/></p>
                          <p>Asset Location : <strong t-field="x.asset_id.location_id.location_name"/></p>
                          <p>Asset Custodian : <strong t-field="x.asset_id.dispatched_to.name"/></p>
                          <p>Asset Description   : <strong t-field="x.asset_id.comment"/></p>
                          <br/>
                          <br/>
                        <table class="table table-sm o_main_table">
                           <thead>
                                <tr class="bg-success">
                                   <th colspan="2">Asset Specifications</th>
                                </tr>
                            </thead>
                       
                            <tbody >
                            <!--<t t-foreach="docs" t-as="x">-->
                                <!--<tr> <td rowspan="9"> <strong>A</strong></td></tr>
                                <tr> <td rowspan="8" ><strong>Good Currency</strong> </td></tr>-->
                                  <tr>  
                                    <td>
                                        <strong>Computer Name</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.comp_names"/>
                                        
                                    </td>
                                    
                                </tr>  
                                <tr>  
                                    <td>
                                        <strong>Processor</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.Processor"/>
                                        
                                    </td>
                                    
                                </tr>  
                                <tr>  
                                    <td>
                                        <strong>Bios</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.bios"/>
                                        
                                    </td>
                                    
                                </tr> 
                                <tr>  
                                    <td>
                                       <strong> OS Build</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.os_build"/>
                                        
                                    </td>
                                    
                                </tr> 
                                <tr>  
                                    <td>
                                        <strong>Mac Address</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.mac_address"/>
                                        
                                    </td>
                                    
                                </tr> 
                                <tr>  
                                    <td>
                                        <strong>Mac Address Wifi</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.mac_address_wifi"/>
                                        
                                    </td>
                                    
                                </tr> 
                                <tr>
                                    <td>
                                        <strong>OS</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.os"/>
                                        
                                    </td>
                                </tr>  
                                <tr>  
                                    <td>
                                        <strong>HDD</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.hdd"/>
                                        
                                    </td>
                                    
                                </tr>  
                                <tr>  
                                    <td>
                                        <strong>RAM</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.asset_id.ram"/>
                                        
                                    </td>
                                    
                                </tr>  
                                
                                
                            <!--</t>-->
                            </tbody>
                        </table>
                        <br/>
                        
                         <table class="table table-sm o_main_table">
                           <thead>
                                <tr class="bg-success">
                                   <th colspan="4">Official Use</th>
                                </tr>
                            </thead>
                            <tbody >
                                <tr>  
                                    <td>
                                        <strong>Initiated By</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.repaired_by.name"/>
                                        
                                    </td>
                                     <td>
                                        <strong>Date</strong>
                                    </td>
                                     <td>
                                         <span t-field="x.repaire_date"/>
                                        
                                    </td>
                                    
                                </tr> 
                            </tbody>
                          </table>
                    
                        </t>
                    </div>
                </t>
            </t>
    
    </template>
</odoo>